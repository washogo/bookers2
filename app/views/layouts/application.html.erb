<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <%if user_signed_in?%>
            <li class="nav-item">
              <%=link_to "Home",user_path(current_user.id),class:'fas fa-home nav-link text-white'%>
            </li>
            <li class="nav-item">
              <%=link_to "Users",users_path,class:'fas fa-users nav-link text-white'%>
            </li>
            <li class="nav-item">
              <%=link_to "Books",books_path,class:'fas fa-book-open nav-link text-white'%>
            </li>
            <li class="nav-item">
              <%=link_to "logout",destroy_user_session_path,method: :delete,class:'fas fa-sign-out-alt nav-link text-white'%>
            </li>
            <%else%>
            <li class="nav-item">
              <%=link_to "Home",root_path,class:'fas fa-home nav-link text-white'%>
            </li>
            <li class="nav-item">
              <%=link_to "About",home_about_path,class:'fas fa-link nav-link text-white'%>
            </li>
            <li class="nav-item">
              <%=link_to "sign up",new_user_registration_path,class:'fas fa-user-plus nav-link text-white'%>
            </li>
            <li class="nav-item">
              <%=link_to "login",new_user_session_path,class:'fas fa-sign-in-alt nav-link text-white'%>
            </li>
            <%end%>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%if user_signed_in? && @user==current_user %>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <%=attachment_image_tag @user,:profile_image,:fill,100,100,fallback:"no_image.jpg"%>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%=@user.name%></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%=@user.introduction%></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit"></a>
            </div>
            <h2 class="mt-3">New book</h2>
            <%=form_with model:@book,url:'/books',local:true do |f|%>
              <div class="form-group">
                <label for="book_title">Title</label>
                <div class="input"><%=f.text_field:title%></div>
              </div>
              <div class="form-group">
                <label for="book_opinion">Opinion</label>
                <div class="input"><%=f.text_area:body%></div>
              </div>
              <div class="form-group">
                <%=f.submit 'Create Book',class:'btn btn-success'%>
              </div>
              <%end%>
          </div>
        </div>
      </div>
      <%end%>
    
    <%= yield %>
  </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>Copy Right Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>