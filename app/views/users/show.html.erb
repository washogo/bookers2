<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%=attachment_image_tag @user,:profile_image,:fill,100,100,fallback:"no_image.jpg"%>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%=@user.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%=@user.introduction%></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%=form_with model:@book,url:'/books',local:true do |f|%>
      <div class="form-group">
        <label for="book_title">Title</label>
        <div class="input"><%=f.text_field:title%></div>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <div class="input"><%=f.text_area:body%></div>
      </div>
      <div class="form-group">
        <%=f.submit 'Create Book',class:'btn btn-success'%>
      </div>
      <%end%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%@books.each do |books|%>
          <tr>
            <td>
              <a href="/users/#{:id}">
                <%=attachment_image_tag @user,:profile_image_id,:fill,100,100,fallback:"no_image.jpg"%>
              </a>
            </td>
            <td>
              <a href=/books/#{:id}>
                <%=books.title%>
              </a>
            </td>
            <td>
              <%=books.body%>
            </td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
